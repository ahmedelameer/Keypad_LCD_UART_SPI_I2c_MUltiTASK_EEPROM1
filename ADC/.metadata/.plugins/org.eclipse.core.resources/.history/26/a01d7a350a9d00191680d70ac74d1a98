#include "ADC.h"

void ADC_int(void){
	/*using AREF*/
	ADMUX=0;
	/*ADC ENABLE & pre scaler select ot work within 125*/
    ADCSRA=(1<<ADPS0)|(1<<ADEN);



}

unit16 ADC_readChannel(unit8 ch_num){

ADMUX=(ADMUX&0xE0)|(ch_num&0x07);
Pin_output(ADCSRA,ADSC);
while(Pin_is_clear(ADCSRA,ADSC));
Pin_output(ADCSRA,ADSC);
return ADC;




}
